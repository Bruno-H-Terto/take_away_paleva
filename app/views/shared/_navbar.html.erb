<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <div class="navbar-brand img-brand">
      <%= link_to root_path do %>
        <%= image_tag 'paleva' %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
      aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if owner_signed_in? %>
          <li>
            <%= link_to owner_path do %>
              <div class="nav-link active"><%= current_owner.card_name %> | <%= current_owner.email %></div>
            <% end %>
          </li>
          <% if current_owner.take_away_store.id.present? %>
            <div class="dropdown">
              <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Acesso rápido
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Minha Loja', take_away_store_path(current_owner.take_away_store), class: 'dropdown-item' %>
                </li>
                <li>
                  <%= link_to 'Meus produtos', take_away_store_items_path(current_owner.take_away_store), class: 'dropdown-item' %>
                </li>
                <li>
                  <%= link_to 'Horário de Funcionamento', take_away_store_business_hours_path(@owner.take_away_store), class: 'dropdown-item' %>
                </li>
              </ul>
            </div>
          <% end %>
        </ul>
        <div>
          <%= button_to 'Sair', destroy_owner_session_path, method: :delete, class: 'btn btn-default' %>
        </div>

        <div class="d-flex align-items-center nav-form">
          <%= form_with url: search_take_away_stores_path, method: :get, data: { turbo: false }, class: 'd-inline-flex align-items-center' do |form| %>
            <div class="form-group mb-0 me-2">
              <%= form.label :query, t('forms.query'), class: "visually-hidden" %>
              <%= form.text_field :query, placeholder: 'Buscar por Nome/Descrição', class: "form-control" %>
            </div>

            <div>
              <%= form.submit 'Enviar', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>

        <% else %>
          <%= link_to t('owner.become_a_partner'), new_owner_registration_path, class: "btn btn-outline-secondary mr-2" %>
          <%= link_to t('owner.sign_in'), new_owner_session_path, class: "btn btn-outline-primary mr-2" %>
        <% end %>
    </div>
  </div>
</nav>
