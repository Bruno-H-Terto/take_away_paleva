<div>
  <h2>Detalhes do pedido <%= @order.code %></h2>
  <small>Solicitado em <%= @order.created_at_current.strftime("%d/%m/%Y %H:%M") %></small>
  <small class="ms-3">Total do pedido: <%= @price %></small>
  <div class="mt-3">
    <strong><%= Order.human_attribute_name(@order.status) %></strong>
    <p>Cliente: <%= @order.name %></p>
    <p>Contato: <%= @order.contact %></p>
  </div>
  <div class="mt-3">
    <h3 class="mb-3">Itens do pedido</h3>
    <% @order.order_items.each do |order_item| %>
      <div class="lh-1 overflow-auto">
        <p><strong>Menu:</strong> <%= order_item.menu.name %></p>
        <p><strong>Item:</strong> <%= order_item.item.name %></p>
        <p><strong>Porção:</strong> <%= order_item.portion.menu_option_name %></p>
        <p><strong>Quantidade:</strong> <%= order_item.quantity %></p>
        <p><strong>Observação:</strong> <%= order_item.observation.presence || 'Nenhuma' %></p>
        <hr>
      </div>
    <% end %>
  </div>
</div>