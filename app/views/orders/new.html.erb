  <h2>Finalize seu Pedido</h2>
  <%= render 'shared/errors', object: @order %>
  
  <%= form_with model: @order do |form| %>
    <div>
      <%= form.label :name, 'Nome do Cliente' %>
      <%= form.text_field :name, class: 'form-control'  %>
    </div>

    <div>
      <%= form.label :phone_number, 'Telefone de contato' %>
      <%= form.text_field :phone_number, class: 'form-control'  %>
    </div>

    <div>
      <%= form.label :email, 'E-mail' %>
      <%= form.email_field :email, class: 'form-control'  %>
    </div>

    <div>
      <%= form.label :register_number, 'CPF' %>
      <%= form.text_field :register_number, class: 'form-control' %>
    </div>
        <%= form.submit 'Salvar e continuar', class: 'btn btn-primary d-flex w-100' %>
  <% end %>