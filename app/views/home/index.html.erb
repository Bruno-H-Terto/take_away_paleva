<section class="row">
  <% if owner_signed_in? && @take_away_store.id.present? %>
    <div class="aside">
      <h2>Cardápio</h2>
      <%= render 'shared/errors', object: @menu %>
      <section class="col-3">
          <button class="btn btn-primary area-dropdown" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Criar nova Categória
          </button>
        </p>
        <div class="collapse area-dropdown" id="collapseExample">
          <div class="card card-body">
            <%= form_with model: [@take_away_store, @menu] do |form| %>
              <div class="mb-2">
                <%= form.label :name, 'Rótulo', class: 'visually-hidden' %>
                <%= form.text_field :name, class: "form-control", placeholder: "Nome do Rótulo" %>
              </div>
              <div>
                <%= form.submit 'Salvar e continuar', class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-3 aside-dashboard">
          <div>
            <h6>Gerenciar pedidos</h6>
          </div>
          <ul>
            <li>Novo pedido</li>
          </ul>
        </div>
      </section>
    </div>

    <%= render 'home/menu_list', menus: @menus %>
    
    <div class="col-3" id="order">
      <% if @cart_items %>
      <h2>Carrinho</h2>
        <%= form_with(scope: :invites, url: root_path) do |form| %>
          <% @cart_items.each do |item| %>
            <div id= "order_item_<%= item.id %>">
              <div class="row">
                <%= item.name %>
                <%= form.text_field nil, id: nil, placeholder: "Observação" %> 
              </div>
              <div>
                <%= form.label :portion_id, 'Opções' %>
                <%= form.collection_select :portion_id, item.portions, :id, :menu_option_name %> 
              </div>
              <div>
                <%= form.label :quantity, 'Quantidade' %>
                <%= form.number_field :quantity %>
              </div>
            </div>
          <% end %>
          <%= form.submit 'Confirmar Pedido' %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</section>

<script>
  document.querySelectorAll('.dropdown-menu').forEach(menu => {
    menu.addEventListener('click', event => {
      event.stopPropagation();
    });
  });

</script>
