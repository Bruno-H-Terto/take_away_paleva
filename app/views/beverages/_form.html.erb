<%= render 'shared/errors', object: beverage %>

<%= form.hidden_field :type, value: 'Beverage' %>

<div>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
</div>

<div>
  <%= form.label :photo %>
  <%= form.file_field :photo, class: 'form-control' %>
</div>


<div>
  <%= form.label :description %>
  <%= form.text_area :description, class: 'form-control' %>
</div>

<div>
  <%= form.label :calories %>
  <%= form.text_field :calories, class: 'form-control' %>
</div>

<div class="mt-3">
  <%= form.submit t('forms.items.action'), class: 'btn btn-primary d-flex w-100' %>
</div>